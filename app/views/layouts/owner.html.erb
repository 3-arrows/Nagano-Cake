<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Nagano-Cake</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if owner_signed_in? %>
          <li><%= link_to ' 商品一覧', owner_home_top_path %></li>
          <li><%= link_to ' 商品一覧', owner_home_top_path %></li>
          <li><%= link_to ' 会員一覧', owner_home_top_path %></li>
          <li><%= link_to ' 注文履歴一覧', owner_home_top_path %></li>
          <li><%= link_to ' ジャンル一覧', owner_genres_path %></li>
          <li><%= link_to ' ログアウト', destroy_owner_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to ' 商品一覧', owner_home_top_path %></li>
          <li><%= link_to ' 新規登録', new_owner_product_path %></li>
          <li><%= link_to ' ログイン', new_owner_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
<main>
    <%= yield %>
</main>
  </body>
</html>

