<h1>商品編集</h1>

<%= form_with(model: @product, local: true, url: owner_product_path(@product), method: :patch) do |form| %>
	<%= form.attachment_field :image %>
	<table>
		<tr>
			<th>商品名</th>
			<th><%= form.text_field :name %></th>
		</tr>
		<tr>
			<th>商品説明</th>
			<th><%= form.text_area :information %></th>
		</tr>
		<tr>
			<th>ジャンル</th>
			<th>
				<%= form_for @product do |f| %>
	          		<%= form.collection_select :genre_id, Genre.all, :id, :name %>
		    <% end %>
		  </th> <!-- 要確認 -->
		</tr>
		<tr>
			<th>税抜価格</th>
			<th><%= form.text_field :price %></th>
		</tr>
		<tr>
			<th>販売ステータス</th>
			<th>
				<%= form_for @product do |f| %>
        			<%= form.select :sale_status, Product.sale_statuses.keys, {include_blank: '選択してください'} %>
			  <% end %>
			</th> <!-- 要確認 -->
		</tr>
	</table>

	<%= form.submit '変更を保存' %>

<% end %>