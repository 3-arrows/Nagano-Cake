<h3>商品　新規登録画面</h3><br>
<%= form_for(@product, url: owner_products_path) do |f| %>
    <%= f.attachment_field :image %>

      <div class="form-group">
        <label>商品名</label>
          <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <label>商品説明</label>
          <%= f.text_field :information %>
      </div>

      <div class="form-group">
        <label>ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>

      <div class="form-group">
        <label>税抜価格</label>
          <%= f.text_field :price %>円
      </div>

      <div class="form-group">
        <label>販売ステータス</label>
        <%= f.select :sale_status, Product.sale_statuses.keys, {include_blank: '選択してください'} %>
      </div>

      <div class="form-group">
        <%= f.submit '新規登録' %>
      </div>
<% end %>