<div class="container">

    <span class="page_header owner_product_index_header">商品新規登録画面</span>
    <%= form_for(@product, url: owner_products_path) do |f| %>
        <div class="row">
            <div class="col-xs-5">
                <%= f.attachment_field :image %>
            </div>
            <div class="col-xs-7">
                <table>
                    <tr>
                        <th class="owner_product_new_th">商品名</th>
                        <th class="owner_product_new_th"><%= f.text_field :name %></th>
                    </tr>
                    <tr>
                        <th class="owner_product_new_th">商品説明</th>
                        <th class="owner_product_new_th"><%= f.text_area :information %></th>
                    </tr>
                    <tr>
                        <th class="owner_product_new_th">ジャンル</th>
                        <th class="owner_product_new_th"><%= f.collection_select :genre_id, Genre.all, :id, :name %></th>
                    </tr>
                    <tr>
                        <th class="owner_product_new_th">税抜価格</th>
                        <th class="owner_product_new_th"><%= f.text_field :price %></th>
                    </tr>
                    <tr>
                        <th class="owner_product_new_th">販売ステータス</th>
                        <th class="owner_product_new_th"><%= f.select :sale_status, Product.sale_statuses.keys, {include_blank: '選択してください'} %></th>
                    </tr>
                    <tr>
                        <th></th>
                        <th class="form-group"><%= f.submit '新規登録', class: "btn-sm btn-success" %></th>
                    </tr>
                </table>
            </div>
        </div>
    <% end %>
</div>