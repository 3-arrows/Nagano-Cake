<h1><strong>商品一覧画面</strong></h1>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= converting_to_jpy(product.price) %></td>
        <td><%= product.genre.name%></td>
        <td><%= sale_status ?  '販売中' : '売り切れ' %></td>
      </tr>
    <% end %>
  </tbody>
</table>