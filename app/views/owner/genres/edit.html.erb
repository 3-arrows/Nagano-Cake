<h1>ジャンル編集</h1>
<%= flash[:notice] %>
<%= form_with(model: @genre, local: true, url: owner_genre_path(@genre), method: :patch) do |form| %>
    <%= form.label :ジャンル %>
　  <%= form.text_field :name %>
    <div class="effective_status">
        <div>
  	        <%= form.radio_button :effective_status, true %>
  	        <%= form.label :effective_status, '有効', value: true %>
        </div>
        <div>
  	    <%= form.radio_button :effective_status, false %>
  	    <%= form.label :effective_status, '無効', value: false %>
        </div>
    </div>
    <%= form.submit '変更を保存する', class: 'btn btn-danger btn-block' %>
<% end %>