<h1>商品編集</h1>

<%= form_for(@product) do |f| %>
	<%= f.attachment_field :image %>
	<table>
		<tr>
			<th>商品名</th>
			<th><%= f.text_field :name %></th>
		</tr>
		<tr>
			<th>商品説明</th>
			<th><%= f.text_area :information %></th>
		</tr>
		<tr>
			<th>ジャンル</th>
			<th>
				<%= form_for @product do |f| %>
		    	<%= f.select :genres_id, [["選択肢１", "ケーキ"], ["選択肢２", "プリン"], ["選択肢３", "焼き菓子"], ["選択肢４", "キャンディ"]], include_blank: "選択して下さい" %>
		    <% end %>
		  </th> <!-- 要確認 -->
		</tr>
		<tr>
			<th>税抜価格</th>
			<th><%= f.text_field :price %></th>
		</tr>
		<tr>
			<th>販売ステータス</th>
			<th>
				<%= form_for @product do |f| %>
			    <%= f.select :sale_status, [["選択肢１", "販売中"], ["選択肢２", "売切れ"]], include_blank: "選択して下さい" %>
			  <% end %>
			</th> <!-- 要確認 -->
		</tr>
	</table>

	<%= f.submit '変更を保存' %>

<% end %>