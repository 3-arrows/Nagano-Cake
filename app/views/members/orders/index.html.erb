<div class="container">

    <span class="page_header">注文履歴一覧</span>

    <table class="table table-bordered">
        <thead>
            <tr class="active">
                <th class="member_order_th">注文日</th>
                <th class="member_order_th_wide">配送先</th>
                <th class="member_order_th_wide">注文商品</th>
                <th class="member_order_th">支払金額</th>
                <th class="member_order_th">ステータス</th>
                <th class="member_order_th">注文詳細</th>
            </tr>
        </thead>

        <% @orders.each do |order| %>
            <tbody>
                <tr>
                    <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
                    <td>
                        <%= order.postal_code %><br>
                        <%= order.address %><br>
                        <%= order.name %>
                    </td>
                    <td>
                        <% order.ordered_products.each do |product| %>
                            <%= product.product.name %>
                        <% end %>
                    </td>
                    <td><%= order.total_price %>円</td>
                    <td><%= order.status %></td>
                    <td class="member_order_td_link"><%= link_to "表示する",order_path(order), class: "btn-sm btn-success" %></td>
                </tr>
            </tbody>
        <% end %>
    </table>
</div>