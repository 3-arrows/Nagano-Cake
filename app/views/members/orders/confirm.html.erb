<div claas="container">
	<div class="row">
		<div class="col-xs-9">
			<h1>注文情報確認</h1>
			<table>
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>
					<% @products.each do |ordered_product| %>
						<tr>
							<td><%= attachment_image_tag ordered_product.product, :image, size: "100x100", fallback: "no_image.jpg" %><%= ordered_product.product.name %>
							</td>
							<td><%= ((ordered_product.product.price * 1.1).floor) %></td>
							<td><%= ordered_product.count %></td>
							<td><%= ((ordered_product.product.price * 1.1).floor) * (ordered_product.count) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= form_with(model: @order, local: true, url: orders_path, method: :post) do |f| %>
				<h2>お支払い方法</h2>
					<%= f.hidden_field :pay %>
					<% if @order.pay == 0 %>
					<p>クレジットカード</p>
					<% else %>
					<p>銀行振込</p>
					<%end%>
				<h2>お届け先</h2>
					<div>
						<%= f.hidden_field :postal_code, :value => params[:order][:new_postal_code] %>
						<%= f.hidden_field :prefecture_code, :value => params[:order][:new_prefecture_code] %>
						<%= f.hidden_field :city, :value => params[:order][:new_city] %>
						<%= f.hidden_field :street , :value => params[:order][:new_street] %>
					</div>
					<div>
						<%= f.hidden_field :name %>
						<%= @new.name %>
					</div>
				<%= f.submit "購入を確定する" %>
			<% end %>
		</div>
		<div class="col-xs-3">
			<table>
				<tr>
					<td>送料</td>
					<td><%= @order.postage %></td>
				</tr>
				<tr>
					<td>商品合計</td>
					<td><%= current_member.cart_total_price %></td>
				</tr>
				<tr>
					<td>請求金額</td>
					<td><%= @order.postage + current_member.cart_total_price %></td>
				</tr>
			</table>
		</div>
	</div>
</div>
