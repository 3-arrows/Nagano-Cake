<h3>注文情報</h3>
<table class="table">
<tbody>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      <%= @order.postal_code %><br>
      <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= t("enums.order.pay.#{@order.pay}") %></td>
  </tr>
  <tr>
    <td>制作ステータス</td>
    <td><%= t("enums.order.status.#{@order.status}")%></td>
  </tr>
</tbody>
</table>

<h3>請求情報</h3>
<table class="table">
<tbody>
  <tr>
    <td>商品合計</td>
    <td><%= @order.total_price %></td>
  </tr>
  <tr>
    <td>配送料</td>
    <td><%= @order.postage %></td>
  </tr>
  <tr>
    <td>ご請求額</td>
    <td><%= @order.total_price + @order.postage %></td>
  </tr>
</tbody>
</table>


<h3>注文内容</h3>o;
<table class="table">
<thead>
 <tr>
    <th>商品</th>
    <th>単価</th>
    <th>個数</th>
    <th>小計</th>
 </tr>
</thead>
<tbody>
<% @order.ordered_products.each do |product| %>
    <tr>
    <td><%= product.product.name %></td>
    <td><%= product.price %></td>
    <td><%= product.count %></td>
    <td><%= product.price * product.count %></td>
    </tr>
<% end %>
</tbody>
</table>
