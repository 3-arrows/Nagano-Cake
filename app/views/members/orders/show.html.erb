<div class="container">

    <h3>注文情報</h3>

    <table class="table">
        <tbody>
            <tr>
                <td>注文日</td>
                <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <tr>
                <td>配送先</td>
                <td>
                    <%= @order.postal_code %><br>
                    <%= @order.address %><br>
                    <%= @order.name %>
                </td>
            </tr>
            <tr>
                <td>支払方法</td>
                <td>
                    <% if @order.pay == 0 %>
                    <p><%= @pay_method = "クレジットカード" %></p>
                    <% else %>
                    <p><%= @pay_method = "銀行振込" %></p>
                    <%end%>
                </td>
            </tr>
            <tr>
                <td>ステータス</td>
                <td><%= @order.status %></td>
            </tr>
        </tbody>
    </table>

    <h3>請求情報</h3>

    <table class="table">
        <tbody>
            <tr>
                <td>商品合計</td>
                <td><%= (@order.total_price) - (@order.postage) %></td>
            </tr>
            <tr>
                <td>配送料</td>
                <td><%= @order.postage %></td>
            </tr>
            <tr>
                <td>ご請求額</td>
                <td><%= @order.total_price %></td>
            </tr>
        </tbody>
    </table>

    <h3>注文内容</h3>

    <table class="table">
        <thead>
            <tr>
                <th>商品</th>
                <th>単価</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
            <% @order.ordered_products.each do |product| %>
                <tr>
                    <td><%= product.product.name %></td>
                    <td><%= (product.price * 1.1).floor %></td>
                    <td><%= product.count %></td>
                    <td><%= (product.price * product.count * 1.1).floor %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>