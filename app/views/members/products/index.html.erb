<div class="container">
	<div class="row">

		<!-- 部分テンプレートを入れる -->

		<div class="col-xs-3">

			<p><%= flash[:notice] %></p>
			<!-- ジャンル検索 -->

    		<div class="genre_search">
    			<span class="genre_seach_head">ジャンル検索</span>
    			<div>
		    		<% @genres.each do |genre| %>
		    			<ul>
		    				<li class="genre_list">
		    					<%= link_to genre.name, products_path(genre: genre.id), :style => "color: #728EE3;" %>
		    				</li>
		    			</ul>
		    		<% end %>
		    	</div>
		    </div>
		</div>
		<div class="col-xs-9">
			<% if params[:genre].nil? %>
			    <span class="page_header">商品一覧</span>
			<% else %>
			    <span class="page_header"><%= Genre.find(params[:genre]).name %>一覧</span>
			<% end %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th colspan="1"></th>
						<th>商品名</th>
						<th>価格</th>
					</tr>
				</thead>
				<tbody>
					<% @products.each do |product| %>
						<% if product.genre.effective_status ==  true %>
							<tr>
								<td>
									<%= link_to product_path(product) do %>
							    		<%= attachment_image_tag product, :image, size: "100x100", fallback: "no_image.jpg" %>
									<% end %>
								</td>
								<td><%= link_to product.name, product_path(product) %></td>
								<td><%= (product.price * 1.1).floor %>(<%= product.price %>)円</td>
							</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>