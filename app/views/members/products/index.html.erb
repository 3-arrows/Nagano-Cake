<div class="container">
	<div class="row">

		<!-- 部分テンプレートを入れる -->

		<div class="col-xs-3">

			<p><%= flash[:notice] %></p>
			<!-- ジャンル検索 -->

    		<div class="genre_search">
    			<span class="genre_seach_head">ジャンル検索</span>
    			<div>
		    		<% @genres.each do |genre| %>
		    			<ul>
		    				<li class="genre_list">
		    					<%= link_to genre.name, products_path(genre: genre.id), :style => "color: #728EE3;" %>
		    				</li>
		    			</ul>
		    		<% end %>
		    	</div>
		    </div>
		</div>
		<div class="col-xs-9">
			<% if params[:genre].nil? %>
			    <span class="page_header">商品一覧</span>
			<% else %>
			    <span class="page_header"><%= Genre.find(params[:genre]).name %>一覧</span>
			<% end %>
			<div class="products">
				<% @products.each do |product| %>
					<% if product.genre.effective_status ==  true %>
						<div class="_index_product_box">
							<%= link_to product_path(product) do %>
					    		<%= attachment_image_tag product, :image, size: "180x130", fallback: "no_image.jpg" %>
							<% end %>
							<p class="index_product_box_name_price"><%= link_to product.name, product_path(product) %><br>
							¥ <%= (product.price * 1.1).floor %></p>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>