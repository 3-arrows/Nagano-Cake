<div class="container">
	<span class="page_header">登録情報編集</span>

	<%= form_for(@member, url: member_path, method: :patch) do |f| %>
		<table width="800">
			<tr>
				<td class="owner_member_td">名前</td>
				<td class="sub_td">(姓)</td>
				<td class="owner_member_td">
					<%= f.text_field :last_name %>　(名) 　<%= f.text_field :first_name %>
				</td>
			</tr>
			<tr>
				<td class="owner_member_td">フリガナ</td>
				<td class="sub_td">(セイ)</td>
				<td class="owner_member_td">
					<%= f.text_field :last_name_kana %>　(メイ) <%= f.text_field :first_name_kana %>
				</td>
			</tr>
			<tr>
				<td class="owner_member_td">メールアドレス</td>
				<td class="sub_td"></td>
				<td class="owner_member_td"><%= f.email_field :email %></td>
			</tr>
			<tr>
				<td class="owner_member_td">郵便番号(ハイフンなし)</td>
				<td class="sub_td"></td>
				<td class="owner_member_td"><%= f.text_field :postal_code %></td>
			</tr>
			<tr>
				<td class="owner_member_td">都道府県</td>
				<td class="sub_td"></td>
				<td class="owner_member_td"><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %></td>
			</tr>
			<tr>
				<td class="owner_member_td">市区町村</td>
				<td class="sub_td"></td>
				<td class="owner_member_td"><%= f.text_field :city %></td>
			</tr>
			<tr>
				<td class="owner_member_td">番号・番地・建物名</td>
				<td class="sub_td"></td>
				<td class="owner_member_td"><%= f.text_area :street %></td>
			</tr>
			<tr>
				<td class="owner_member_td">電話番号(ハイフンなし)</td>
				<td class="sub_td"></td>
				<td class="owner_member_td"><%= f.text_field :phone_number %></td>
			</tr>
		</table>

		<%= f.submit "編集内容を保存する", class: "btn-sm btn-success" %>
		<%= link_to "退会する", exit_members_path, class: "btn_exit" %>
	<% end %>
</div>