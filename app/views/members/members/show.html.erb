<div class="container">
	<h1>マイページ</h1>　　<%= flash[:notice] %>

	登録情報
	<%= link_to "編集する", member_edit_path, class: "btn my_page_edit" %>
	<%= link_to "パスワードを変更する" ,edit_member_registration_path %>

	<table class="table">
		<tbody>
			<tr>
				<td>氏名</td>
				<td><%= @member.last_name %>　<%= @member.first_name %></td>
			</tr>
			<tr>
				<td>カナ</td>
				<td><%= @member.last_name_kana %>　<%= @member.first_name_kana %></td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td><%= @member.postal_code %></td>
			</tr>
			<tr>
				<td>住所</td>
				<td><%= @member.address %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td><%= @member.phone_number %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td><%= @member.email %></td>
			</tr>
		</tbody>
	</table>

	<p>配送先<%= link_to "一覧を見る",destinations_path(@member), class: "btn destination_index" %></p>
	<p>注文履歴<%= link_to "一覧を見る",orders_path(@member), class: "btn ordered_product" %></p>
</div>