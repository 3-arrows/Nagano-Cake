<div class="container">
    <h3>ショッピングカート</h3>
    <%= link_to "カートを空にする",carts_path, method: :delete, "data-confirm" => "本当に空にしますか？" %>

    <table class = "table table-bordered">
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @carts.each do |cart| %>
                <tr>
                    <td><%= cart.product.name%></td>
                    <td><%= (cart.product.price * 1.1).floor %></td>
                    <td>
                        <%= form_for cart do |c|%>
                            <%= c.number_field :count, min:1, max:10000, step:1 %>
                            <%= c.submit "変更" %>
                        <% end%>
                    </td>
                    <td><%= (cart.product.price * 1.1).floor * cart.count %></td>
                    <td><%= link_to "削除する",cart_path(cart.id), method: :delete, "data-confirm" => "削除してよろしいですか？" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>



    <span><%= link_to "買い物を続ける",root_path %></span>



    <table class = "table table-bordered">
        <tr>
            <td>合計金額</td>
            <td><%= current_member.cart_total_price %></td>
        </tr>
    </table>

    <span><%= link_to "情報入力に進む", new_order_path %></span>
</div>