<h3>ショッピングカート</h3>
<%= link_to "カートを空にする",carts_path, method: :delete %>

</br>

<table class = "table table-bordered">
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% @carts.each do |cart| %>
        <tr>
            <td><%= cart.product.name%></td>
            <td><%= cart.product.unit_price%></td>
            <td>
                <%= form_for cart do |c|%>
                <%= c.number_field :count,min:1,max:10000,step:1 %>
                <%= c.submit "変更" %>
                <% end%>
            </td>
            <td>
                <%= tax_price(cart.product.count_price) * cart.count %>
            </td>
            <td>
                <%= link_to "削除する",cart_path(cart.id), method: :delete %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
</br>



<span>
<%= link_to "買い物を続ける",root_path %>
</span>



<table class = "table table-bordered">
    <tr>
        <td class>合計金額</td>
        <td><%= current_member.orders.total_price %></td>
    </tr>
</table>



