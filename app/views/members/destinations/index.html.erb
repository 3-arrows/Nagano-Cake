<p class="flash_message"><%= flash[:notice] %></p>

<div class="container">
	<h1>配送先登録 / 一覧</h1>
	<table width="500">
		<tr>
			<td>郵便番号(ハイフンなし)</td>
			<td><%= text_field_tag :postal_code, placeholder: "(例)1234567" %></td>
		</tr>
		<tr>
			<td>住所</td>
			<td><%= text_field_tag :address, placeholder: "〇〇県△△市□□ ××番地×" %></td>
		</tr>
		<tr>
			<td>宛名</td>
			<td><%= text_field_tag :name, placeholder: "(例)山田太郎" %></td>
		</tr>
	</table>
	<%= submit_tag "登録する" %>

	<table>
		<thead>
			<tr>
				<th>郵便番号</th>
				<th>住所</th>
				<th>宛名</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @destinations.each do |destination| %>
				<tr>
					<td>destination.postal_code</td>
					<td>destination.address</td>
					<td>destination.name</td>
					<td>
						<%= link_to "編集する", edit_destination_path, class: "btn destination_edit" %>
						<%= link_to "削除する", destination_path, method: :delete, class: "btn destination_delete", "data-confirm" => "本当に削除しますか？" %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>