<p class="flash_message"><%= flash[:notice] %></p>

<div class="container">
	<%= form_for (@destination) do |f| %>
	<h1>配送先登録 / 一覧</h1>
    <div class="field">
        <%= f.label :postal_code %><br />
        <%= f.text_field :postal_code %>
    </div>

    <div class="field">
        <%= f.label :prefecture_code %><br />
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %>
    </div>

    <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city %>
    </div>

    <div class="field">
        <%= f.label :street %><br />
        <%= f.text_field :street %>
    </div>

    <table width="500">
		<tr>
		<tr>
			<td>宛名</td>
			<td><%= f.text_field :name,:placeholder => "(例)山田太郎" %></td>
		</tr>
	</table>
	<%= f.submit "登録する" %>
	<% end %>

	<table>
		<thead>
			<tr>
				<th>郵便番号</th>
				<th>住所</th>
				<th>宛名</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @destinations.each do |destination| %>
				<tr>
					<td><%= destination.postal_code %></td>
					<td><%= destination.prefecture_code %></td>
					<td><%= destination.city %></td>
					<td><%= destination.street %></td>
					<td><%= destination.name %></td>
					<td>
						<%= link_to "編集する", edit_destination_path(destination), class: "btn destination_edit" %>
						<%= link_to "削除する", destination_path(destination), method: :delete, class: "btn destination_delete", "data-confirm" => "本当に削除しますか？" %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>