<div class="container">

	<h1>配送先編集</h1>

	<%= form_for(@destination) do |f| %>
		<%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
		<%= f.text_field :postal_code %>

		<%= f.label :address, "住所" %>
		<%= f.text_area :address %>

		<%= f.label :name, "宛名" %>
		<%= f.text_field :name %>

		<%= f.submit "更新", class: "btn destination_update" %>

	<% end %>
</div>