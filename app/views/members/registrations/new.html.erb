<div class="container">
    <span class="page_header">新規会員登録</span>

    <div class="form-horizontal" role="form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <%# 名前(姓、名)の入力フォーム %>
            <table width="700">
                <tr>
                    <th class="sign_up_th">名前</th>
                    <td class="sign_up_td"><%= f.text_field :last_name, placeholder: "(例)山田" %></td>
                    <td class="sign_up_td"><%= f.text_field :first_name, placeholder: "(例)太郎" %></td>
                </tr>
                <tr>
                    <th class="sign_up_th">フリガナ</th>
                    <td class="sign_up_td"><%= f.text_field :last_name_kana, placeholder: "(例)ヤマダ" %></td>
                    <td class="sign_up_td"><%= f.text_field :first_name_kana, placeholder: "(例)タロウ" %></td>
                </tr>
                <tr>
                    <th class="sign_up_th"><%= f.label :email, "メールアドレス" %></th>
                    <td class="sign_up_td"><%= f.email_field :email, placeholder: "(例)sato-taro@example.com" %></td>
                </tr>
                <tr>
                    <th class="sign_up_th"><%= f.label :postal_code, "郵便番号" %></th>
                    <td class="sign_up_td"><%= f.text_field :postal_code, placeholder: "(例)1234567" %></td>
                </tr>
                <tr>
                    <th class="sign_up_th"><%= f.label :prefecture_code, "都道府県" %></th>
                    <td class="sign_up_td"><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %></td>
                </tr>
                <tr>
                    <th class="sign_up_th"><%= f.label :city, "市区町村" %></th>
                    <td class="sign_up_td"><%= f.text_field :city, placeholder: "(例)〇〇市〇〇町" %></td>
                </tr>
                <tr>
                    <th class="sign_up_th"><%= f.label :street, "番号・番地・建物名" %></th>
                    <td class="sign_up_td"><%= f.text_field :street, placeholder: "(例)〇-〇-〇" %></td>
                </tr>
                <tr>
                    <th class="sign_up_th"><%= f.label :phone_number, "電話番号(ハイフンなし)" %></th>
                    <td class="sign_up_td"><%= f.text_field :phone_number, placeholder: "(例)09012345678" %></td>
                </tr>
                <tr>
                    <th class="sign_up_th"><%= f.label :password, "パスワード(6文字以上)" %></th>
                    <td class="sign_up_td"><%= f.password_field :password, placeholder: "パスワード" %></td>
                </tr>
                <tr>
                    <th class="sign_up_th"><%= f.label :password_confirmation, "パスワード(確認用)" %></th>
                    <td class="sign_up_td"><%= f.password_field :password_confirmation, placeholder: "パスワード確認用" %></td>
                </tr>
            </table>

                <%= f.submit "Sign up", value: "新規登録", class: "order_next_btn cart_btn btn-sm btn-success" %>

        <% end %>
    </div>
</div>